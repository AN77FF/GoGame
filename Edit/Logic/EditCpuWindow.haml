<Window x:Class="GoGame.EditCpuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit CPU" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding CpuModel.Name, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="CPU Name" />
            <TextBox Text="{Binding CpuModel.SkillLevel, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Skill Level" />
            <ComboBox Text="{Binding CpuModel.Strategy}" PlaceholderText="Strategy">
                <ComboBoxItem Content="Aggressive"/>
                <ComboBoxItem Content="Defensive"/>
            </ComboBox>
            <Button Command="{Binding SaveCommand}" Content="Save" />
        </StackPanel>
    </Grid>
</Window>
